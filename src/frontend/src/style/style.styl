.fish_captcha,
.fish_captcha__form,
.fish_captcha__image
  width 100%
  border 1px solid #cecece
  border-radius 5px


.fish_captcha .mb-10
  margin-bottom 10px

.fish_captcha__image
  text-align center
  &> img
    width 100%
    max-width 500px

.fish_captcha.p-10, .fish_captcha .p-10
  padding 10px

.fish_captcha .ib
  display inline-block

.fish_captcha
  background #cecece

.fish_captcha__form,
.fish_captcha__image
  background #fff

.fish_captcha__image
  overflow hidden

.fish_captcha__form-group-input
  width 85%

.fish_captcha__form-group-refresh
  margin-left 10px
  width 10%
